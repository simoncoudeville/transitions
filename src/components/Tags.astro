---
const { tags, currentPath, amount } = Astro.props;
---

<header class="header">
  <h1 class="header__logo font-size-base"><a href="./">Rams</a></h1>
  <nav class="tags">
    <ul class="tags__list list-reset">
      <li class="tags__item">
        <a
          class={currentPath === ""
            ? "tags__link tags__link--active"
            : "tags__link"}
          href="./"
        >
          all</a
        >
      </li>
      {
        tags.map((tag) => (
          <li>
            <a
              class={
                currentPath === tag
                  ? "tags__link tags__link--active"
                  : "tags__link"
              }
              href={`/${tag}`}
            >
              {tag}
            </a>
          </li>
        ))
      }
    </ul>
    <button class="tags__button">tags</button>
  </nav>
  <p class="header__amount color-meta">
    {amount} products
  </p>
</header>
